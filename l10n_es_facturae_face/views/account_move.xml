<odoo>
    <record id="view_move_form" model="ir.ui.view">
        <field name="name">account.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="l10n_es_facturae.view_move_form" />
        <field name="arch" type="xml">
            <button name="action_post" position="after">
                <button
                    name="%(l10n_es_facturae_face.edi_l10n_es_facturae_face_cancel_act_window)s"
                    type="action"
                    string="Cancel FACe"
                    context="{'default_move_id': id}"
                    attrs="{'invisible': ['|',
                        ('l10n_es_facturae_status', '=', False),
                        ('l10n_es_facturae_cancellation_status', 'not in', ['face-4100', 'face-4400'])]}"
                />
            </button>
        </field>
    </record>
</odoo>
